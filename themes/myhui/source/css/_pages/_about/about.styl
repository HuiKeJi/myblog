.about-avatar
  position relative
  margin -8rem auto 1rem
  width 10rem
  height 10rem
  z-index 3

  img
    width 100%
    height 100%
    border-radius 50%
    background-color transparent
    object-fit cover
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

.about-info
  & > div
    margin-bottom .5rem

.about-name
  font-size 1.75rem
  font-weight bold

.about-intro
  font-size 1rem

.about-icons
  & > a:not(:last-child)
    margin-right .5rem

  & > a > i
    font-size 1.5rem


// ---------------------------
// 图片图标的样式（type: "img"）
// ---------------------------
.about-icon-img
  width: 30px                   // 设置图标宽度为 20 像素
  height: 30px                  // 设置图标高度为 20 像素
  vertical-align: middle        // 垂直居中对齐文字或其他图标
  margin: 0 6px                // 左右间距，避免图标挤在一起
  border-radius: 4px            // 圆角边框，让图标更柔和
  object-fit: contain           // 保持图像比例缩放，不拉伸

// ---------------------------
// 二维码触发容器（包裹图标和悬浮二维码）
// ---------------------------
.qr-trigger
  position: relative            // 为二维码的绝对定位提供参照
  display: inline-block         // 使其行为类似行内元素但可设置宽高
  margin: 0 6px                 // 与其他图标保持间隔
  cursor: pointer               // 鼠标变为指针（可点击感）

// ---------------------------
// 悬浮显示的二维码图片样式
// ---------------------------
.qr-img
  display: none                 // 默认不显示二维码
  position: absolute            // 相对于 .qr-trigger 绝对定位
  top: 50px                   // 放置在图标上方 110px
  left: 50%                     // 水平居中对齐容器
  transform: translateX(-50%)   // 向左偏移 50%，实现完美居中
  width: 180px                  // 设置二维码宽度为 100 像素
  height: 180px                 // 设置二维码高度为 100 像素
  // padding: 100px                  // 图片周围加一点内边距
  background: white             // 背景白色，避免遮挡
  border: 1px solid #ddd        // 灰色边框，增强识别度
  z-index: 100                  // 提高层级，防止被遮挡

// ---------------------------
// 鼠标悬停时显示二维码
// ---------------------------
.qr-trigger:hover .qr-img
  display: block                // 悬停时将二维码图片显示出来